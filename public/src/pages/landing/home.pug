mixin highlight_reel()
  #highlightIndicators.carousel.slide(data-ride='carousel')
    .carousel-inner
      .carousel-item.active
        img(src='/assets/flower.png' alt='First slide')
      .carousel-item
        img(src='/assets/surprise.jpg' alt='Second slide')
      .carousel-item
        img(src='/assets/orange.svg' alt='Third slide')
    ol.carousel-indicators
      li.active(data-target='#highlightIndicators' data-slide-to='0')
      li(data-target='#highlightIndicators' data-slide-to='1')
      li(data-target='#highlightIndicators' data-slide-to='2')

mixin navigation()
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#myNavbar')
        #myNavbar
          ul.navbar-nav
            li.nav-item
              a.page.nav-link.menu-item.nav-active(href='#') Graphic Design
            li.nav-item
              a.page.nav-link.menu-item(href='#') Illustration
            li.nav-item
              a.page.nav-link.menu-item(href='#') Augmented Reality
            li.nav-item
              a.page.nav-link.menu-item(href='#') Animation
            li.nav-item
              a.page.nav-link.menu-item(href='#') About Me


.scroll-page.row.ml-0
